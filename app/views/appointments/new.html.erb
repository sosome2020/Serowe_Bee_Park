<center>
<h1>New Meeting</h1>
<%= form_with(model: [@user, @appointment], local: true, class: "ui form" ) do |f| %>
<%= f.label :Farmer_Stakeholder %>
<%= f.select :user_id, @users.collect { |p| [p.name, p.id]} %>
<br />
<%= f.label :date %>
<%= f.date_field :date, required: true %>
<br />
<%= f.label :time %>
<%= f.time_field :time, required: true %>
<br />
<br />
<%= f.submit nil, class: "ui green button inverted" %>
<%= link_to 'Quit', tasks_path, class:"ui button blue inverted" %>
<% end %>
</center>
